{
  "name": "paypass-builder",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run client:build && npm run api:build",
    "client:build": "vite build",
    "api:build": "next build",
    "client:dev": "vite",
    "api:dev": "next dev",
    "dev": "concurrently \"npm:api:dev\" \"npm:client:dev\"",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "neon:init": "node scripts/init-neon.js",
    "start": "next start",
    "lint": "next lint",
    
    "_comment_validation": "=== PHASE VALIDATION & QUALITY GATES ===",
    "validate:current": "node scripts/validate-phase2.js",
    "validate:phase1": "node scripts/validate-phase1.js",
    "validate:phase2": "node scripts/validate-phase2.js",
    "validate:all": "npm run validate:code && npm run validate:security && npm run validate:performance",
    "validate:code": "npm run type-check && npm run lint",
    "validate:security": "npm run security:check",
    "validate:performance": "npm run test:performance",
    
    "_comment_testing": "=== TESTING SCRIPTS ===",
    "test": "jest",
    "test:unit": "jest --testMatch='**/*.test.{ts,tsx}' --coverage",
    "test:integration": "jest --testMatch='**/*.spec.{ts,tsx}'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:auth": "jest --testMatch='**/*auth*.test.{ts,tsx}'",
    "test:payments": "jest --testMatch='**/*payment*.test.{ts,tsx}'",
    "test:cross-border": "jest --testMatch='**/*cross-border*.test.{ts,tsx}'",
    "test:fraud": "jest --testMatch='**/*fraud*.test.{ts,tsx}'",
    "test:currency": "jest --testMatch='**/*currency*.test.{ts,tsx}'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=2",
    
    "_comment_performance": "=== PERFORMANCE TESTING ===",
    "test:performance": "node scripts/performance-test.js",
    "test:performance:full": "npm run test:load && npm run test:lighthouse",
    "test:load": "artillery run performance/load-test.yml",
    "test:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=lighthouse/results.json",
    "benchmark": "node scripts/benchmark.js",
    
    "_comment_security": "=== SECURITY & COMPLIANCE ===",
    "security:check": "npm audit --audit-level=moderate",
    "security:audit": "npm audit && snyk test",
    "security:fix": "npm audit fix",
    "validate:security": "npm run security:check && npm run security:scan",
    "security:scan": "semgrep --config=p/security-audit --config=p/secrets",
    
    "_comment_code_quality": "=== CODE QUALITY ===",
    "validate:code": "npm run lint && npm run type-check && npm run format:check",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint:fix": "next lint --fix",
    "validate:code-standards": "node scripts/validate-code-standards.js",
    
    "_comment_database": "=== DATABASE MANAGEMENT ===",
    "db:reset": "npm run db:drop && npm run db:migrate",
    "db:drop": "drizzle-kit drop",
    "db:seed": "node scripts/seed-database.js",
    "db:backup": "node scripts/backup-database.js",
    "db:validate": "node scripts/validate-schema.js",
    
    "_comment_documentation": "=== DOCUMENTATION ===",
    "docs:generate": "typedoc --out docs/api src/",
    "docs:validate": "node scripts/validate-docs.js",
    "docs:serve": "http-server docs -p 8080",
    
    "_comment_deployment": "=== DEPLOYMENT & CI/CD ===",
    "build:production": "NODE_ENV=production npm run build",
    "deploy:staging": "npm run validate:current && npm run build:production && node scripts/deploy-staging.js",
    "deploy:production": "npm run validate:current && npm run build:production && node scripts/deploy-production.js",
    "health:check": "node scripts/health-check.js",
    
    "_comment_phase_management": "=== PHASE MANAGEMENT ===",
    "phase:status": "node scripts/phase-status.js",
    "phase:advance": "node scripts/advance-phase.js",
    "phase:rollback": "node scripts/rollback-phase.js",
    
    "_comment_cleanup": "=== CLEANUP & MAINTENANCE ===",
    "clean": "rm -rf .next dist node_modules/.cache",
    "clean:all": "npm run clean && rm -rf node_modules",
    "setup": "npm install && npm run db:migrate && npm run db:seed",
    "postinstall": "husky install"
  },
  "currentPhase": 1,
  "phaseConfig": {
    "1": {
      "name": "Foundation",
      "description": "Core infrastructure, basic functionality, security foundation",
      "completionThreshold": 80,
      "estimatedDuration": "8-12 weeks"
    },
    "2": {
      "name": "Core Features", 
      "description": "Full feature implementation, advanced security, performance optimization",
      "completionThreshold": 85,
      "estimatedDuration": "10-14 weeks"
    },
    "3": {
      "name": "Scale & Optimize",
      "description": "Microservices migration, advanced features, business expansion",
      "completionThreshold": 90,
      "estimatedDuration": "8-10 weeks"
    }
  },
